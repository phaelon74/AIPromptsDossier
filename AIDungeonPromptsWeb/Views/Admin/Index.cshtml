@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <h2>Admin Panel</h2>
    
    <div class="row mt-4">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage user accounts, roles, and permissions.</p>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">System Settings</h5>
                    <p class="card-text">Configure system-wide settings like registration and page sizes.</p>
                    <a href="@Url.Action("Settings", "Admin")" class="btn btn-primary">System Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>




