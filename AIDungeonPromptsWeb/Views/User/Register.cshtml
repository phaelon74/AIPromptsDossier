@model RegisterUserModel
@{ ViewData["Title"] = "Register"; }

<h2>Register</h2>
<br/>

@if (TempData["ValidationErrors"] != null)
{
	<div class="alert alert-danger">
		<strong>Validation Errors:</strong> @TempData["ValidationErrors"]
	</div>
}

<form asp-action="Register" method="post" novalidate>
	@Html.HiddenFor(m => m.ReturnUrl)
	<input type="text" name="Honey" class="honey" tabindex="-1" autocomplete="off" aria-hidden="true" />
	<div class="form-group required">
		@Html.LabelFor(m => m.Username)
		<input asp-for="Username" class="form-control"/>
		<span class="invalid-feedback" asp-validation-for="Username"></span>
	</div>
	<div class="form-group required">
		@Html.LabelFor(m => m.Password)
		<input type="password" asp-for="Password" class="form-control"/>
		<span class="invalid-feedback" asp-validation-for="Password"></span>
	</div>
	<div class="form-group required">
		@Html.LabelFor(m => m.PasswordConfirm)
		<input type="password" asp-for="PasswordConfirm" class="form-control"/>
		<span class="invalid-feedback" asp-validation-for="PasswordConfirm"></span>
	</div>
	<div class="d-flex flex-row-reverse">
		<button type="submit" class="btn btn-lg btn-primary">Submit</button>
	</div>
</form>
